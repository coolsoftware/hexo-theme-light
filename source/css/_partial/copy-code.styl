.highlight:hover .copy-btn, pre:hover .copy-btn 
    opacity 1

.copy-btn
    color #333
    cursor pointer
    line-height 1.6
    opacity 0
    padding 6px 6px 2px 6px
    position absolute
    transition opacity 0.2s ease-in-out
    background-color #eee
    background-image linear-gradient(#fcfcfc, #eee)
    border 1px solid #d5d5d5
    border-radius 3px
    font-size 0.8125em
    right 4px
    top 8px
.fa
    font 20px font-icon
.fa-copy
    &:before
        content '\f0c5'
.fa-check-circle
    &:before
        content '\f058'
.fa-times-circle
    &:before
        content '\f057'
<% if (theme.title) { %><div id="title-wrapper"><% } %>
  <div class="alignleft">
    <% if (theme.title) { %><div id="title"><a href="<%- config.root %>"><%
      if (theme.title.image) { %><img src="<%- url_for(theme.title.image) %>" /><% }
      if (theme.title.text) { %><%= theme.title.text %><% }
    %></a></div><%
    } else { %><h1><a href="<%- config.root %>"><%= config.title %></a></h1><% } %>
    <h2><a href="<%- config.root %>"><% if (config.subtitle){ %><%= config.subtitle %><% } %></a></h2>
  </div>
  <nav id="main-nav" class="alignright">
    <ul>
      <% for (var i in theme.menu){ %>
        <%
          var menuitem = theme.menu[i];
          var menutitle = i;
          var menulink = '';
          var menuicon = '';
          var menuclass = '';
          var menutarget = '';
          if (typeof(menuitem) === 'object') {
            menutitle = menuitem.title || '';
            menulink = menuitem.link || '';
            menutarget = menuitem.target || ''; 
            if (menuitem.target) {
              menutarget = ' target="' + escape(menuitem.target) + '"';
            }
            if (menuitem.icon) {
              menuicon = '<span class="menuicon">' + menuitem.icon +'</span>';
            }
          }
          else 
          if (typeof(menuitem) === 'string') {
            menulink = menuitem;
          }
        %>
        <li><a href="<%- url_for(menulink) %>"<%- menutarget %>><%- menuicon %><%= menutitle %></a></li>
      <% } %>
    </ul>
    <div class="clearfix"></div>
  </nav>
  <div class="clearfix"></div>
<% if (theme.title) { %></div><% } %>